<form class="user-form sign-in" {{action "login" on="submit"}}>
    <h2 class="user-form-heading">Please sign in</h2>
    {{input placeholder="Email" autofocus="true" class="form-control bottom-squared" value=email}}
    {{input placeholder="Password" type="password" class="form-control top-squared" value=password}}
    <label class="checkbox">
        {{input type="checkbox" checked=remember}}Remember me
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>