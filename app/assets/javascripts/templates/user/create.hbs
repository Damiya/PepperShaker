<form class="form-register" {{action 'create' on="submit"}}>
    <h2 class="form-register-heading">Please sign in</h2>
    {{input placeholder="Username" autofocus="true" class="form-control" valueBinding="username"}}
    {{input placeholder="Password" type="password" class="form-control" valueBinding="password"}}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
</form>